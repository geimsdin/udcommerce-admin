{
    "name": "unusualdope/laravel-ecommerce",
    "description": "A Laravel package for ecommerce",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Unusualdope",
            "email": "rozin@unusualdope.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "laravel/scout": "^10.0",
        "laravel/socialite": "^5.16",
        "typesense/typesense-php": "^4.9",
        "unusualdope/banner-manager": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Unusualdope\\LaravelEcommerce\\": "src",
            "UDEcommerce\\": "src"
        },
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Unusualdope\\LaravelEcommerce\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Unusualdope\\LaravelEcommerce\\UdLaravelEcommerceServiceProvider"
            ],
            "aliases": {
                "UdLaravelEcommerce": "Unusualdope\\LaravelEcommerce\\UdLaravelEcommerceFacade"
            }
        }
    }
}
